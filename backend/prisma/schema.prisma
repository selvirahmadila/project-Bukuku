generator client {
  provider = "prisma-client-js"
} 

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  nama     String
  npm      String @unique
  password String
  loans    loan[]
}

model book {
  id      Int    @id @default(autoincrement())
  judul   String
  penulis String
  loans   loan[]
}

model loan {
  id         Int      @id @default(autoincrement())
  userId     Int
  bookId     Int
  loanDate   DateTime @default(now())
  returnDate DateTime?

  user user @relation(fields: [userId], references: [id])
  book book @relation(fields: [bookId], references: [id])
}
